<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/rosterListFragment">

    <fragment
        android:id="@+id/rosterListFragment"
        android:name="com.example.todo.ui.roster.RosterListFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/displayModel"
            app:destination="@id/displayFragment" />
        <action
            android:id="@+id/addTodoItem"
            app:destination="@id/editFragment" >
            <!-- @null means actually null, and not "null" -->
            <argument
                android:name="modelId"
                android:defaultValue="@null" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/displayFragment"
        android:name="com.example.todo.ui.display.DisplayFragment"
        android:label="@string/app_name" >
        <argument
            android:name="modelId"
            app:argType="string" />
        <action
            android:id="@+id/editModel"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.todo.ui.edit.EditFragment"
        android:label="@string/app_name" >
        <argument
            android:name="modelId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>